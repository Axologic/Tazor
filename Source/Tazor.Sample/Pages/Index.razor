@page "/"
@using Tazor.Sample.Models

<h1>Welcome to Tazor</h1>

<h4>Latest Posts</h4>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var post in BlogPosts.GetBlogPosts().Take(3))
    {
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@post.Title</h5>
                    <p class="card-text">@post.PublishedOn</p>
                    <a href="blog/@post.Slug" class="btn btn-primary">Read</a>
                </div>
            </div>
        </div>
    }
</div>